{
    "name": "blank",
    "version": "0.1.0",
    "description": "Web full stack on typescript",
    "license": "MIT",
    "scripts": {
        "_hack-first-run": "mkdir -p ./.dev/server/ && touch ./.dev/server/server.js",
        "dev": "export NODE_ENV=development && npm run _hack-first-run && concurrently npm:watch-server-run npm:watch-server npm:watch-static npm:watch-server-views npm:watch-client",
        "build": "export NODE_ENV=production && npm run _clean && npm run build-server && npm run build-server-views && npm run build-static && npm run build-client",
        "prod": "export NODE_ENV=production && node ./dist/server/server.js",
        "_clean": "rm -rf ./dist/**",
        "build-static": "sync-files ./src/static ./dist/static",
        "watch-static": "sync-files --watch ./src/static ./.dev/static",
        "build-server-views": "sync-files ./src/server-views ./dist/server-views",
        "watch-server-views": "sync-files --watch ./src/server-views ./.dev/server-views",
        "build-server": "tsc --project ./src/server/tsconfig.json",
        "watch-server": "tsc --watch --project ./src/server/tsconfig.dev.json",
        "build-client": "parcel build --no-source-maps --experimental-scope-hoisting ./src/client/client.tsx --out-dir ./dist/static/client",
        "watch-client": "parcel watch ./src/client/client.tsx --out-dir ./.dev/static/client --public-url ./",
        "watch-server-run": "nodemon -w ./.dev/server -w ./.dev/server-views ./.dev/server/server.js"
    },
    "dependencies": {
        "express": "^4.16.4",
        "pug": "^2.0.3",
        "source-map-support": "^0.5.10"
    },
    "devDependencies": {
        "@types/express": "^4.16.0",
        "@types/node": "^10.9.4",
        "@types/pug": "^2.0.4",
        "concurrently": "^4.1.0",
        "less": "^3.9.0",
        "nodemon": "^1.18.6",
        "parcel-bundler": "^1.12.3",
        "prettier": "^1.16.4",
        "sync-files": "^1.0.3",
        "typescript": "^3.1.6"
    }
}
