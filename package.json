{
    "name": "blank",
    "version": "0.1.0",
    "description": "Full stack typescript/express/react/mobx monorepo starter",
    "license": "MIT",
    "scripts": {
        "dev": "mkdir -p ./.dev/server/ && touch ./.dev/server/server.js && concurrently --raw --prefix \"{time}-{pid}\" \"npm run watch-compile-server\" \"npm run watch-run-server\" \"npm run watch-copy-static\" \"npm run watch-copy-server-views\" \"npm run watch-build-client\"",
        "build": "rm -rf ./dist/** && npm run validate && npm run compile-server && npm run copy-server-views && npm run copy-static && npm run build-client",
        "prod": "node ./dist/server/server.js",
        "validate-server": "tsc --project ./src/server/tsconfig.json --noEmit",
        "validate-client": "tsc --project ./src/client/tsconfig.json --noEmit",
        "validate": "npm run validate-server && npm run validate-client",
        "copy-static": "sync-files ./src/static ./dist/static",
        "watch-copy-static": "sync-files --watch ./src/static ./.dev/static",
        "copy-server-views": "sync-files ./src/server-views ./dist/server-views",
        "watch-copy-server-views": "sync-files --watch ./src/server-views ./.dev/server-views",
        "compile-server": "tsc --project ./src/server/tsconfig.json",
        "watch-compile-server": "tsc --watch --project ./src/server/tsconfig.dev.json",
        "build-client": "parcel build --no-source-maps --out-dir ./dist/static/client --out-file client ./src/client/client.tsx",
        "watch-build-client": "parcel watch --out-dir ./.dev/static/client --out-file client --public-url /client ./src/client/client.tsx --hmr-port 7788 --no-autoinstall",
        "watch-run-server": "nodemon --watch ./.dev --ignore ./.dev/static ./.dev/server/server.js",
        "docker-reset-dev": "docker-compose -f docker-compose.dev.yml build --no-cache --force-rm",
        "docker-dev": "npm run docker-reset-dev && docker-compose -f docker-compose.dev.yml up --no-cache --force-rm",
        "docker-prod": "docker-compose build --no-cache && docker-compose up --build",
        "docker-prod-cache": "docker-compose build && docker-compose up"
    },
    "dependencies": {
        "dotenv": "^7.0.0",
        "express": "^4.16.4",
        "mobx": "^5.9.0",
        "mobx-react": "^5.4.3",
        "pug": "^3.0.1",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "source-map-support": "^0.5.10"
    },
    "devDependencies": {
        "@types/express": "^4.16.0",
        "@types/node": "^10.9.4",
        "@types/pug": "^2.0.4",
        "@types/react-dom": "^16.8.3",
        "concurrently": "^4.1.0",
        "less": "^3.9.0",
        "nodemon": "^1.18.6",
        "parcel-bundler": "^1.12.3",
        "prettier": "^1.16.4",
        "sync-files": "git+ssh://git@github.com:podgorniy/node-sync-files.git#v1.0.5",
        "typescript": "^3.1.6"
    }
}
