{
    "name": "blank",
    "version": "0.1.0",
    "description": "Full stack typescript/express/react/mobx monorepo starter",
    "license": "MIT",
    "scripts": {
        "dev": "export NODE_ENV=development && mkdir -p ./.dev/server/ && touch ./.dev/server/server.js && concurrently --raw --prefix \"{time}-{pid}\" \"npm run watch-compile-server\" \"npm run watch-run-server\" \"npm run watch-copy-static\" \"npm run watch-copy-server-views\" \"npm run watch-build-client\"",
        "build": "export NODE_ENV=production && rm -rf ./dist/** && npm run compile-server && npm run copy-server-views && npm run copy-static && npm run build-client",
        "prod": "export NODE_ENV=production && node ./dist/server/server.js",
        "copy-static": "sync-files ./src/static ./dist/static",
        "watch-copy-static": "sync-files --watch ./src/static ./.dev/static",
        "copy-server-views": "sync-files ./src/server-views ./dist/server-views",
        "watch-copy-server-views": "sync-files --watch ./src/server-views ./.dev/server-views",
        "compile-server": "tsc --project ./src/server/tsconfig.json",
        "watch-compile-server": "tsc --watch --project ./src/server/tsconfig.dev.json",
        "build-client": "parcel build --no-source-maps --out-dir ./dist/static/client --out-file client ./src/client/client.tsx",
        "watch-build-client": "parcel watch --out-dir ./.dev/static/client --out-file client --public-url /client ./src/client/client.tsx",
        "watch-run-server": "nodemon --watch ./.dev/server --ignore ./.dev/static ./.dev/server/server.js"
    },
    "dependencies": {
        "dotenv": "^7.0.0",
        "express": "^4.16.4",
        "pug": "^2.0.3",
        "source-map-support": "^0.5.10"
    },
    "devDependencies": {
        "@types/express": "^4.16.0",
        "@types/node": "^10.9.4",
        "@types/pug": "^2.0.4",
        "@types/react-dom": "^16.8.3",
        "concurrently": "^4.1.0",
        "less": "^3.9.0",
        "mobx": "^5.9.0",
        "mobx-react": "^5.4.3",
        "nodemon": "^1.18.6",
        "parcel-bundler": "^1.12.3",
        "prettier": "^1.16.4",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "sync-files": "git+https://github.com/podgorniy/node-sync-files#v1.0.4",
        "typescript": "^3.1.6"
    }
}
